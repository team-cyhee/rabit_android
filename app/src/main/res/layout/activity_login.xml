<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main"
    tools:context=".activity.sign.login.RegisterActivity">
    <!-- DONE
        edit action bar
        TODO: text box auto complete
            how? using SharedPreferences.Editor(p.714)
     -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            sl:scale_base_height="260"
            sl:scale_base_width="360">

            <ImageView
                android:src="@drawable/logo_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                sl:scale_height="125"
                sl:scale_top="80"
                sl:scale_width="125" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/app"
                android:textColor="@color/basic"
                android:textStyle="bold"
                sl:scale_height="54"
                sl:scale_textsize="40"
                sl:scale_top="205"
                sl:scale_width="90" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            sl:scale_base_height="340"
            sl:scale_base_width="360">

            <EditText
                android:id="@+id/emailText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/basic"
                android:drawableStart="@drawable/id"
                android:hint="@string/email"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                sl:scale_height="40"
                sl:scale_textsize="15"
                sl:scale_top="70"
                sl:scale_width="250" />

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:background="@color/basic"
                android:drawableStart="@drawable/password"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColorHint="@color/gray"
                sl:scale_height="40"
                sl:scale_textsize="15"
                sl:scale_top="120"
                sl:scale_width="250" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/gray"
                android:text="@string/login"
                android:textColor="@color/main"
                android:textStyle="bold"
                sl:scale_height="40"
                sl:scale_textsize="15"
                sl:scale_top="170"
                sl:scale_width="250" />

            <Button
                android:id="@+id/facebookLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/basic"
                android:text="login with facebook"
                android:textColor="@color/black"
                android:textStyle="bold"
                sl:scale_height="40"
                sl:scale_left="56"
                sl:scale_textsize="10"
                sl:scale_top="220"
                sl:scale_width="118" />

            <Button
                android:id="@+id/googleLoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/basic"
                android:text="login with google"
                android:textColor="@color/black"
                android:textStyle="bold"
                sl:scale_height="40"
                sl:scale_left="188"
                sl:scale_textsize="10"
                sl:scale_top="220"
                sl:scale_width="118" />

            <TextView
                android:id="@+id/registerBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main"
                android:text="@string/register"
                android:textColor="@color/gray"
                android:textStyle="bold"
                sl:scale_left="270"
                sl:scale_textsize="18"
                sl:scale_top="280" />
        </com.ssomai.android.scalablelayout.ScalableLayout>
    </LinearLayout>



</FrameLayout>